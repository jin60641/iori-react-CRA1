{
	"plugins": ["node", "mocha"],
	"extends": ["eslint:recommended", "plugin:node/recommended"],
	"env": {
		"mocha": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 9,
	},
	"settings": {
		"node": {
			"allowModules": [
				"mocha",
				"chai",
				"chai-arrays",
				"chai-deep-match",
				"supertest",
			]
		}
	},
	"rules": {
		"node/exports-style": [
			"error",
			"module.exports"
		],
		"no-console": "off",
		"node/no-unpublished-require": "off"
	},
	"globals": {
		"requireFrom": true,
		"expect": true,
		"sinon": true,
	}
}
